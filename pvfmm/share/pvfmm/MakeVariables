# Load this file inside your Makefile and use the variables CXXFLAGS_PVFMM and
# LDLIBS_PVFMM for compiling your code. You can use examples/Makefile as a
# template makefile for your projects linking to this library.

INSTALL_DIR_PVFMM = /home/yokotar/fmm_codes/pvfmm
TOP_SRCDIR_PVFMM = /home/yokotar/fmm_codes/pvfmm
PKG_SUBDIR_PVFMM = /pvfmm

# Compiler and flags.
CXX_PVFMM = mpic++
INTEL_OFFLOAD_OK=no

# The PVFMM library and headers.
PVFMM_INCLUDES = -I$(INSTALL_DIR_PVFMM)/include$(PKG_SUBDIR_PVFMM)
PVFMM_LIBS = -L$(INSTALL_DIR_PVFMM)/lib$(PKG_SUBDIR_PVFMM) -lpvfmm

# Add FFTW include and lib paths.
FFTW_INCLUDES_PVFMM = 
FFTW_LIBS_PVFMM =  -lfftw3  -lfftw3f

# BLAS, LAPACK libs.
BLAS_LAPACK_LIB_PVFMM = -llapack -lblas  -L/usr/local/lib/../lib -L/usr/lib/gcc/x86_64-linux-gnu/4.8 -L/usr/lib/gcc/x86_64-linux-gnu/4.8/../../../x86_64-linux-gnu -L/usr/lib/gcc/x86_64-linux-gnu/4.8/../../../../lib -L/lib/x86_64-linux-gnu -L/lib/../lib -L/usr/lib/x86_64-linux-gnu -L/usr/lib/../lib -L. -L/usr/local/lib -L/usr/lib/gcc/x86_64-linux-gnu/4.8/../../.. -ldl -lstdc++ -lgfortran -lm -lquadmath

# X include and lib paths.
X_INCLUDES_PVFMM = 
X_LIBS_PVFMM = 

# nvcc compiler and flags.
NVCC_PVFMM = no
NVCCFLAGS_PVFMM =   $(PVFMM_INCLUDES)

# CUDA include and libs.
CUDA_CFLAGS_PVFMM = 
CUDA_LDLIBS_PVFMM = 

# Add all CXXFLAGS_PVFMM and LDLIBS_PVFMM
CXXFLAGS_PVFMM = -mavx -fabi-version=6 -std=gnu++11 -fopenmp -DALLTOALLV_FIX $(PVFMM_INCLUDES) $(FFTW_INCLUDES_PVFMM) $(X_INCLUDES_PVFMM) $(CUDA_CFLAGS_PVFMM)
LDLIBS_PVFMM =  $(PVFMM_LIBS) $(FFTW_LIBS_PVFMM) $(BLAS_LAPACK_LIB_PVFMM) $(X_LIBS_PVFMM) $(CUDA_LDLIBS_PVFMM) -ldl -lstdc++ -lm 

LDFLAGS_PVFMM = $(LDLIBS_PVFMM) # Deprecated, use LDLIBS_PVFMM instead
